module Virtualnetwork {
  source                        = "git::git@github.com:cofonseca/Terraform-Modules.git//VirtualNetwork"
  region                        = "${var.region}"
  environment                   = "${var.environment}"
  resource_group_name           = "${var.resource_group_name}-${var.environment}"
  virtual_network_name          = "${var.virtual_network_name}-${var.environment}"
  virtual_network_address_space = "${var.virtual_network_address_space}"
  subnet_1_name                 = "${var.subnet_1_name}"
  subnet_1_prefix               = "${var.subnet_1_prefix}"
  subnet_2_name                 = "${var.subnet_2_name}"
  subnet_2_prefix               = "${var.subnet_2_prefix}"
  public_ip_name                = "${var.public_ip_name}-${var.environment}"
  public_ip_type                = "${var.public_ip_type}"
  vpn_name                      = "${var.vpn_name}-${var.environment}"
  vpn_sku                       = "${var.vpn_sku}"
  ip_configuration_name         = "${var.ip_configuration_name}"
  vpn_address_space             = "${var.vpn_address_space}"
  local_network_name            = "${var.local_network_name}"
  blueport_gateway_address      = "${var.blueport_gateway_address}"
  blueport_address_space        = "${var.blueport_address_space}"
  vpn_psk                       = "${var.vpn_psk}"
}
